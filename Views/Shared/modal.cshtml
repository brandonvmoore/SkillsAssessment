<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add New Core Competency</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>Please enter a name:</div>
                <input id="modalInput" type="text" class="form-control" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="modalSaveButton" type="button" data-dismiss="modal" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>


<script>
    docReady(() => {
        $("#exampleModal").on('hide.bs.modal', clearInputs);
        $('#modalSaveButton').click(function () {
            ajax({
                url: "@Url.Action("AddCompetency","Assessments")",
                data: { competencyName: $("#modalInput").val() },
                success: (data) => alert(data),
                type: "POST",
                error: function (a, b, c) {
                    debugger;
                }

            })
        });

    });
    function clearInputs() {
        $('#modalInput').val('');
    }
</script>